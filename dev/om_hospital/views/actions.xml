<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_actions_form" model="ir.ui.view">
        <field name="name">hospital.actions.form</field>
        <field name="model">hospital.actions</field>
        <field name="arch" type="xml">
            <form string="Actions Form">
                <header>
                    <button name="check_code" string="Send e-mail" type="object" class="oe_highlight"/>
                </header>
            </form>
        </field>
    </record>

    <record id="action_hospital_actions" model="ir.actions.act_window">
        <field name="name">Actions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.actions</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem
            id="menu_actions"
            name="Actions"
            parent="menu_hospital_actions"
            action="action_hospital_actions"
            sequence="10"
    />
</odoo>